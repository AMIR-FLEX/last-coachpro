# FLEX PRO Backend Configuration
# ================================
# کپی این فایل به .env و مقادیر را تنظیم کنید

# اطلاعات اپلیکیشن
APP_NAME=FLEX PRO
APP_VERSION=1.0.0
DEBUG=True

# دیتابیس
# برای SQLite:
DATABASE_URL=sqlite:///./flexpro.db
# برای PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/flexpro

# امنیت
# یک کلید قوی و یکتا تولید کنید: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
